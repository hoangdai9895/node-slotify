<% include ../partials/header %>
 <div class="container-fluid over-flow-hidden">
        <div class='row'>
        
        <a href="/albums" class='w-100'><img src="https://images.unsplash.com/photo-1511671782779-c97d3d27a1d4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class='w-100 '></a>     </div>
    </div>
		<div class="container">
	<h1>Edit Album</h1>
	<form enctype="multipart/form-data" method="post" action="/albums/edit/<%=album.id %>">
	  <div class="form-group">
	    <label>Artist</label>
	    <input type="text" class="form-control" name="artist" value="<%=album.artist %>" placeholder="Artist Name">
	  </div>
	  <div class="form-group">
	    <label>Album Title</label>
	    <input type="text" class="form-control" name="title" value="<%=album.title %>" placeholder="Album Title">
	  </div>
	  <div class="form-group">
	    <label>Genre</label>
	    <select name="genre" class="form-control">
	    	<% for(var i=0; i<genres.length; i++) {%>
   				<option value="<%= genres[i].name %>" 
   				<% if(album.genre == genres[i].name) { %>
   					selected
   				<% } %>>
   				<%= genres[i].name %></option>
			<% } %>
	    </select>
	  </div>
	  <div class="form-group">
	    <label>Album Info</label>
	    <textarea class="form-control" name="info" placeholder="Album Info"><%=album.info %></textarea>
	  </div>
	  <div class="form-group">
	    <label>Release Year</label>
	    <input type="text" class="form-control" value="<%=album.year %>" name="year">
	  </div>
	  <div class="form-group">
	    <label>Record Label</label>
	    <input type="text" class="form-control" value="<%=album.label %>" name="label">
	  </div>
	  <div class="form-group">
	    <label>Number of Tracks</label>
	    <input type="number" class="form-control" value="<%=album.tracks %>" name="tracks">
	  </div>
	  <div class="form-group">
	    <label>Album Cover</label>
	    <input type="file" class="form-control" name="cover" value="<%=album.cover %>">
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	   <a class="btn btn-danger" href="/albums">Close</a>
	</form>
	</div>
<% include ../partials/footer %>