<% include ../partials/header.ejs %>

    <div class="container-fluid over-flow-hidden">
        <div class='row'>
        
        <a href="/albums" class='w-100'><img src="https://images.unsplash.com/photo-1508700115892-45ecd05ae2ad?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" class='w-100'></a>     </div>
    </div>
    <div class="container mt-4">
         <h1 class='d-flex justify-content-between mb-4'>My Albums 
            <% if(authdata != null){ %>
            <% } %>
        </h1>
        <a href="/albums/add" class="btn btn-outline-success ">Add Album</a>
        <a href="/genres" class="btn btn-outline-primary ">View Geners</a>
        <div class="row mt-5">
            <% for(var i=0; i<albums.length; i++) {%>
                <div class="col-md-4 col-sm-6 col-12 ">
                <div class=" albums pb-2">
                    <a href="albums/details/<%=albums[i].id %>" class="w-100 d-block text-center">
                    <img src="/images/uploads/<%= albums[i].cover %>" class='img-fluid w-auto border' ></a>
                    <h4 class="album-title text-center my-3">
                        <%= albums[i].title %>
                    </h4>
                    <p class="artist-name text-center my-2">
                        <%= albums[i].artist %>
                    </p>
                    </div>
                </div>
                <% } %>
        </div>
        <%if (success_msg != false) {%>
                    <div class="alert alert-success noti-btn fixed-top">
                        <%=success_msg %>
                    </div>
                    <% }%>
                        <%if (error_msg != false) {%>
                            <div class="alert alert-denger noti-btn fixed-top">
                                <%=error_msg %>
                            </div>
                            <% }%>
          </div>         
        <% include ../partials/footer.ejs %>